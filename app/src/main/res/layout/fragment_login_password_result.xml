<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <data>

    </data>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.login.LoginPasswordResultActivity">

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="52dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/btn_login_close"/>

    <TextView
        android:id="@+id/resulttitle"
        android:layout_width="319dp"
        android:layout_height="102dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="120dp"
        android:fontFamily="sans-serif-black"
        android:text="임시 비밀번호를 전송했습니다.\n전송 받은 임시 비밀번호로\n 로그인해주세요."
        android:textColor="@color/black"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/rectangle_9"
        android:layout_width="322dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:text="로그인 하러가기"
        android:gravity="center_horizontal|top"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:fontFamily="sans-serif"
        android:background="@drawable/bg_login_button_yellow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>
</layout>
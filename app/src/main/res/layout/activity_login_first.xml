<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".view.login.LoginFirstActivity">


    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="85dp"
        android:src="@drawable/ic_login_top_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 아이디 입력란 -->

    <EditText
        android:id="@+id/editText"
        android:layout_width="322dp"
        android:layout_height="48dp"
        android:layout_marginTop="29dp"
        android:background="@drawable/bg_login_button_white"
        android:hint="아이디"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_logo" />

    <!-- 비밀번호 입력란 -->
    <EditText
        android:id="@+id/editText2"
        android:layout_width="322dp"
        android:layout_height="48dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/bg_login_button_white"
        android:hint="비밀번호"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText" />


    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:buttonTint="#212124"
        android:checked="true"
        android:text="로그인 상태 유지"
        android:textColor="#757575"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText2" />
    <!-- 로그인 버튼 -->
    <TextView
        android:id="@+id/editText3"
        android:layout_width="322dp"
        android:layout_height="40dp"
        android:layout_marginTop="53dp"
        android:background="@drawable/bg_login_edittext"
        android:gravity="center_horizontal|top"
        android:text="로그인"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText2" />

    <TextView
        android:id="@+id/signshipt"
        android:layout_width="48dp"
        android:layout_height="15dp"
        android:layout_marginLeft="69dp"
        android:layout_marginTop="24dp"
        android:text="회원가입"
        android:textAppearance="@style/login2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editText3" />

    <ImageView
        android:id="@+id/chevron_right1"
        android:layout_width="8dp"
        android:layout_height="15dp"
        android:layout_marginLeft="116dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/btn_login_rightarrow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editText3" />

    <TextView
        android:id="@+id/findid"
        android:layout_width="60dp"
        android:layout_height="15dp"
        android:layout_marginLeft="133dp"
        android:layout_marginTop="24dp"
        android:text="아이디 찾기"
        android:textAppearance="@style/login2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editText3" />

    <ImageView
        android:id="@+id/chevron_right2"
        android:layout_width="8dp"
        android:layout_height="15dp"
        android:layout_marginLeft="192dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/btn_login_rightarrow"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editText3" />

    <TextView
        android:id="@+id/findpassword"
        android:layout_width="73dp"
        android:layout_height="15dp"
        android:layout_marginLeft="212dp"
        android:layout_marginTop="24dp"
        android:text="비밀번호 찾기"
        android:textAppearance="@style/login2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editText3" />

    <ImageView
        android:id="@+id/chevron_right3"
        android:layout_width="8dp"
        android:layout_height="15dp"
        android:layout_marginLeft="284dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/btn_login_rightarrow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editText3" />


</androidx.constraintlayout.widget.ConstraintLayout>

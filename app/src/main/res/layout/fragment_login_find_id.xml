<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.login.LoginFindIdFragment">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="16dp"
        android:layout_height="24dp"
        android:layout_marginTop="52dp"
        android:layout_marginLeft="17dp"
        android:src="@drawable/btn_login_leftarrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/title1"
        android:layout_width="147dp"
        android:layout_height="27dp"
        android:layout_marginTop="54dp"
        android:layout_marginLeft="109dp"
        android:text="아이디 찾기"
        android:fontFamily="sans-serif-black"
        android:gravity="center_horizontal|top"
        android:textSize="19sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/topline1"
        android:layout_width="408dp"
        android:layout_height="0dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_signup_dividebox_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title1" />

    <TextView
        android:id="@+id/report1"
        android:layout_width="321dp"
        android:layout_height="35dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-black"
        android:text="가입 시 등록하신 이메일을 입력하시면 아이디의 일부를\n 알려드립니다."
        android:textSize="13sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topline1" />

    <TextView
        android:id="@+id/emailsumbit"
        android:layout_width="104dp"
        android:layout_height="18dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="이메일"
        android:fontFamily="sans-serif-black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/report1"
        />

    <EditText
        android:id="@+id/editEmail"
        android:layout_width="335dp"
        android:layout_height="51dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:hint="가입하신 이메일 주소를 알려주세요"
        android:inputType="textEmailAddress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/emailsumbit" />

    <TextView
        android:id="@+id/findbutton"
        android:layout_width="322dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:text="아이디 찾기"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_horizontal|top"
        android:textSize="17sp"
        android:textColor="@color/black"
        android:background="@drawable/bg_login_edittext"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>
</layout>